<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xrigau.syncscrolling.samples"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SimpleSyncScrollActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".ComplexSyncScrollActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".LongerSyncScrollActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".TwoSyncScrollActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".GravitySyncScrollActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".GmailSyncScrollActivity"
            android:configChanges="orientation" />
    </application>

</manifest>